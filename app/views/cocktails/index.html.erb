<h1>Cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-3">
        <div class="card-product">
          <%= cl_image_tag(cocktail.photo.key, width: 400, heigth: 300, crop: :fill) if cocktail.photo.attached?%>
          <div class="card-product-infos">
            <h2><%= link_to cocktail.name, cocktail_path(cocktail) %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



<%= link_to 'Add cocktail', new_cocktail_path %>

