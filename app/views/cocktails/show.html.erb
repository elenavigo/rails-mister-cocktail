<h1><%= @cocktail.name %></h1>

<% if @cocktail.photo.attached?  %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> : <%= dose.ingredient.name %>
      <%= link_to 'Remove', dose_path(dose), method: :delete, data: {confirm: 'are you sure its risky!'} %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add dose', new_cocktail_dose_path(@cocktail)  %>
<br>
<%= link_to 'Go to cocktails', cocktails_path %>
